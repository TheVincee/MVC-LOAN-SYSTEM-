@model List<JJK.Entities.LoanDb>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <a class="btn btn-success mb-3" href="/loan/create">Create New</a>
    <div class="table-responsive">
        <table class="table table-bordered" id="loan-table">
            <thead class="thead-dark">
                <tr>
                    <th>Client</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>No of Payment</th>
                    <th>Deduction</th>
                    <th>Date Created</th>
                    <th>Receivable Amount</th>
                    <th>Due Date</th>
                    <th>Payable Amount</th>
                    <th>Action</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr>
                        <th scope="row">@loan.ClientId</th>
                        <td>@loan.Type</td>
                        <td>@loan.Amount</td>
                        <td>@loan.NoOfPayment</td>
                        <td>@loan.Deduction</td>
                        <td>@loan.DateCreated.ToString("yyyy-MM-dd")</td>
                        <td>@loan.RecievableAmount</td>
                        <td>@loan.DueDate.ToString("yyyy-MM-dd")</td>  
                        <td>@loan.PayableAmount</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="/loan/update/@loan.Id">Update</a>
                            <a class="btn btn-danger btn-sm" href="/loan/delete/@loan.Id">Delete</a>
                            <a class="btn btn-primary btn-sm" href="/payments/viewpayments/@loan.ClientId">View Payments</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
